account "helpdeskbot" maildir "/home/helpdeskbot/mail"

match "^from:.*helpdeskbot@{{ org_domain }}" in headers action drop

match "^from:\s*(\S+@\S+)" in headers
	and "^subject:(.*\bping\b)" in headers
	and "^references:\s*(.*)" in headers
	action exec "ssh root@::1 helpdesk ping sender=%0 subject=%1 references=%2 in_reply_to=%[message_id]"
