hostname="{{ inventory_hostname }}-{{ responsibility }}.{{ org_domain }}"

ifconfig_re0="DHCP"
ifconfig_re0_ipv6="inet6 accept_rtadv"

ntpd_enable="YES"
ntpdate_enable="YES"
powerd_enable="YES"
sshd_enable="YES"
zfs_enable="YES"

dumpdev="AUTO"

syslogd_enable="YES"
syslogd_flags="-8 -O syslog -N -s -s"

cron_flags="-j 15 -J 15"

microcode_update_enable="YES"
